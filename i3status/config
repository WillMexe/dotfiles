general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 5
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

order += "load"
order += "cpu_temperature 0"
order += "disk /"
order += "wireless wlp4s0"
order += "volume master"
order += "battery 1"
order += "tztime local"

load {
        format = "<span background='#f59335'> %5min Load </span>"
}

cpu_temperature 0 {
        format = "<span background='#bf616a'> CPU: %degrees Â°C </span>"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

disk "/" {
        format = "<span background='#adb7cd'> Disk: %free Free </span>"
}

wireless wlp4s0 {
        format_up = "<span background='#b48ead'> Wifi: %essid </span>"
        format_down = "<span background='#b48ead'> Wifi: Disconnected </span>"
}

volume master {
        format = "<span background='#ebcb8b'> Sound: %volume </span>"
        format_muted = "<span background='#ebcb8b'> Sound: Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 1 {
        format = "<span background='#abcb4a'> Battery: %percentage </span>"
        status_chr = "Charging"
        status_unk = "Unknown"
        status_full = "Charged"
        path = "/sys/class/power_supply/BAT0/uevent"
	low_threshold = 10
}

tztime local {
	format = "<span background='#81a1c1'> %time </span>"
	format_time = "%a %-d %b %H:%M"
}

